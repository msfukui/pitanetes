.:53 {
    log
    errors
    health {
        lameduck 5s
    }
    hosts {<% @locals.each do |local| %>
        <%= local[:ip] %> <%= local[:domain] %><% end %>
        fallthrough
    }
    ready
    prometheus :9153
    forward . <% @dnsservers.each do |dnsserver| %><%= dnsserver[:ip] %> <% end %>{
        max_concurrent 1000
    }
    cache 30
    loop
    reload
    loadbalance
}
